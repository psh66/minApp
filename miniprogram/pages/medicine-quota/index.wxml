<view class="container" style="padding: 20rpx; min-height: 100vh; background: #f8f8f8;">
  <view class="card" style="background: white; border-radius: 12rpx; padding: 20rpx; margin-bottom: 20rpx; box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.05);">
    <view class="item" style="display: flex; justify-content: space-between; align-items: center;">
      <view class="left">
        <view class="title" style="font-size: 32rpx; font-weight: 500; color: #333; margin-bottom: 8rpx;">{{noticeName}}</view>
        <view class="desc" bindtap="addCount" style="font-size: 26rpx; color: #666;">
          剩余可接收次数：<text class="red" style="color: #ff4d4f; font-weight: bold;">{{remainCount}}</text>，点击此处+1
        </view>
      </view>
      <switch class="switch" checked="{{enabled}}" bindchange="onSwitchChange" style="transform: scale(1.2);"/>
    </view>
    <view style="font-size: 24rpx; color: #999; margin-top: 10rpx;">
      {{enabled ? '✅ 推送已开启' : '❌ 推送已关闭'}}
    </view>
  </view>

  <view class="info" style="background: white; border-radius: 12rpx; padding: 20rpx; box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.05);">
    <view style="font-size: 28rpx; color: #333; margin-bottom: 10rpx;">总次数：<text style="font-weight: bold;">{{totalCount}}</text></view>
    <view style="font-size: 28rpx; color: #333; margin-bottom: 10rpx;">已消耗：<text style="font-weight: bold;">{{usedCount}}</text></view>
    <!-- 可选：添加重置按钮 -->
    <button bindtap="resetUsedCount" style="margin-top: 10rpx; background: #f5f5f5; color: #666; border: none; padding: 8rpx 15rpx; border-radius: 8rpx; font-size: 24rpx;">
      重置已消耗次数
    </button>
  </view>
</view>