.container {
  padding: 20rpx;
  background: #f5f5f5;
  min-height: 100vh;
}
.card {
  background: #fff;
  border-radius: 16rpx;
  overflow: hidden;
}
.item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx 24rpx;
  border-bottom: 1rpx solid #f0f0f0;
}
.item:last-child {
  border-bottom: none;
}
.left {
  flex: 1;
}
.title {
  font-size: 32rpx;
  color: #333;
  margin-bottom: 8rpx;
}
.desc {
  font-size: 26rpx;
  color: #999;
  line-height: 1.4;
}
.red {
  color: #ff4d4f;
  font-weight: bold;
}
.switch {
  transform: scale(0.9);
}
.info {
  display: flex;
  justify-content: space-between;
  background: #fff;
  border-radius: 16rpx;
  margin-top: 20rpx;
  padding: 30rpx;
  color: #666;
  font-size: 28rpx;
}
