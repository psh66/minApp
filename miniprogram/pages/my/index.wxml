<!--pages/my/index.wxml--><view class="container" style="padding: 20rpx; background: #f5f5f5; min-height: 100vh;">
  <!-- 用户信息卡片 -->
  <view style="background: white; border-radius: 16rpx; padding: 25rpx; margin-bottom: 25rpx; box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.05);">
    <view style="display: flex; align-items: center; margin-bottom: 20rpx;">
      <view style="width: 100rpx; height: 100rpx; border-radius: 50%; background: linear-gradient(135deg, #1890ff, #07c160); display: flex; align-items: center; justify-content: center; margin-right: 20rpx;">
        <text style="font-size: 40rpx; color: white; font-weight: bold;">{{userName.charAt(0) || '用'}}</text>
      </view>
      <view>
        <view style="font-size: 34rpx; color: #333; font-weight: 500;">{{userName || '未设置昵称'}}</view>
        <view style="font-size: 24rpx; color: #666; margin-top: 4rpx;">{{userTypeText}}</view>
      </view>
    </view>
    <view style="display: flex; justify-content: space-between; padding: 15rpx 0; border-top: 1px solid #f5f5f5;">
    <view style="font-size: 26rpx; color: #666;">服务有效期</view>
    <!-- 1. 先校验时间是否有效，无效则显示兜底；2. 过期状态色值兜底 -->
    <view style="font-size: 26rpx; color: {{isTrialExpired === true ? '#ff4d4f' : '#07c160'}}; font-weight: 500;">
  {{validTimeText}}
</view>
  </view>
  </view>

  <!-- 功能设置 -->
  <view style="background: white; border-radius: 16rpx; box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.05); margin-bottom: 25rpx;">
    <view bindtap="goToVersion" style="padding: 20rpx; border-bottom: 1px solid #f5f5f5; display: flex; justify-content: space-between; align-items: center;">
      <view style="font-size: 30rpx; color: #333;">版本管理</view>
      <view style="display: flex; align-items: center;">
        <view style="font-size: 26rpx; color: #666; margin-right: 10rpx;">{{isFormalVersion ? '正式版' : '试用版'}}</view>
        <view style="width: 16rpx; height: 16rpx; border-top: 2rpx solid #ccc; border-right: 2rpx solid #ccc; transform: rotate(45deg);"></view>
      </view>
    </view>
    <view class="setting-item">
  <view class="setting-left">
    <text class="setting-label">连续2天未签到提醒</text>
    <text class="setting-subtitle">提醒将在第二天20点发送</text>
  </view>
  <switch class="setting-switch" checked="{{userInfo.enableRemind}}" bindchange="onRemindSwitchChange"/>
</view>
