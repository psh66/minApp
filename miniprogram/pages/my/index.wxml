<view class="container" style="padding: 20rpx; background: linear-gradient(to bottom, #f0f9ff, #ffffff); min-height: 100vh;">
  <!-- 头像+姓名+版本状态 -->
  <view style="background: white; border-radius: 16rpx; padding: 25rpx; margin-bottom: 25rpx; box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.05);">
    <view wx:if="{{isChildMode}}" style="display: flex; align-items: center; margin-bottom: 20rpx;">
      <view style="width: 100rpx; height: 100rpx; border-radius: 50%; background: linear-gradient(135deg, #ff7d00, #ff9f43); display: flex; align-items: center; justify-content: center; margin-right: 20rpx;">
        <text style="font-size: {{40 * fontSizeMultiple}}rpx; color: white; font-weight: bold;">子</text>
      </view>
      <view>
        <view style="font-size: {{34 * fontSizeMultiple}}rpx; color: #333; font-weight: 500;">子女模式（当前绑定）</view>
        <view style="font-size: {{28 * fontSizeMultiple}}rpx; color: #ff7d00; margin-top: 4rpx;">
          {{bindParentInfo.name || '未获取父母姓名'}}
        </view>
        <view style="font-size: {{24 * fontSizeMultiple}}rpx; color: {{parentPayInfo.isTrialExpired ? '#ff4d4f' : '#666'}}; margin-top: 4rpx;">
          {{parentPayInfo.isTrialExpired ? '父母账号试用已到期' : (parentPayInfo.isFormalVersion ? '父母账号为正式会员' : '父母账号为试用会员（剩余' + parentPayInfo.remainingTrialDays + '天）')}}
        </view>
      </view>
    </view>
    <view wx:else style="display: flex; align-items: center; margin-bottom: 20rpx;">
      <view style="width: 100rpx; height: 100rpx; border-radius: 50%; background: linear-gradient(135deg, #1890ff, #07c160); display: flex; align-items: center; justify-content: center; margin-right: 20rpx;">
        <text style="font-size: {{40 * fontSizeMultiple}}rpx; color: white; font-weight: bold;">{{(userInfo.name && userInfo.name.charAt(0)) || '福'}}</text>
      </view>
      <view>
        <view style="font-size: {{34 * fontSizeMultiple}}rpx; color: #333; font-weight: 500;">{{userInfo.name || '未设置昵称'}}</view>
        <view style="font-size: {{24 * fontSizeMultiple}}rpx; color: {{isTrialExpired ? '#ff4d4f' : '#666'}}; margin-top: 4rpx;">
          {{isTrialExpired ? '试用已到期' : (isFormalVersion ? '正式会员' : '试用会员（剩余' + remainingTrialDays + '天）')}}
        </view>
      </view>
    </view>

    <view style="display: flex; justify-content: space-between; padding: 15rpx 0; border-top: 1px solid #f5f5f5;">
      <view style="font-size: {{26 * fontSizeMultiple}}rpx; color: #666;">服务有效期</view>
      <view style="font-size: {{26 * fontSizeMultiple}}rpx; color: {{isChildMode ? (parentPayInfo.isTrialExpired ? '#ff4d4f' : '#07c160') : (isTrialExpired ? '#ff4d4f' : '#07c160')}}; font-weight: 500;">
        {{isChildMode ? (parentPayInfo.serviceStartTime + ' - ' + parentPayInfo.serviceEndTime) : (serviceStartTime + ' - ' + serviceEndTime)}}
      </view>
    </view>
  </view>

  <view wx:if="{{!isChildMode}}" style="background: white; border-radius: 16rpx; box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.05); margin-bottom: 25rpx; padding: 20rpx; position: relative;">
    <view style="font-size: {{30 * fontSizeMultiple}}rpx; color: #333;">生成子女绑定码</view>
    <button bindtap="generateBindCode" style="position: absolute; right: 20rpx; top: 50%; transform: translateY(-50%); background: #07c160; color: white; border: none; width: 120rpx; min-width: 80rpx; padding: 4rpx 0; border-radius: 8rpx; font-size: {{22 * fontSizeMultiple}}rpx; line-height: 1.2; text-align: center;">
      生成
    </button>
  </view>

  <view style="background: white; border-radius: 16rpx; box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.05); margin-bottom: 25rpx;">
    <view wx:if="{{isChildMode}}" bindtap="showParentPayDialog" style="padding: 20rpx; display: flex; justify-content: space-between; align-items: center;">
      <view style="font-size: {{30 * fontSizeMultiple}}rpx; color: #333;">为父母续费/升级</view>
      <view style="display: flex; align-items: center;">
        <view style="font-size: {{26 * fontSizeMultiple}}rpx; color: #ff7d00; margin-right: 10rpx;">{{parentPayInfo.isFormalVersion ? '正式版' : '试用版'}}</view>
        <view style="width: 16rpx; height: 16rpx; border-top: 2rpx solid #ff7d00; border-right: 2rpx solid #ff7d00; transform: rotate(45deg); margin-left: 10rpx;"></view>
      </view>
    </view>
    <view wx:else bindtap="showPayDialog" style="padding: 20rpx; display: flex; justify-content: space-between; align-items: center;">
      <view style="font-size: {{30 * fontSizeMultiple}}rpx; color: #333;">版本管理</view>
      <view style="display: flex; align-items: center;">
        <view style="font-size: {{26 * fontSizeMultiple}}rpx; color: #666; margin-right: 10rpx;">{{isFormalVersion ? '正式版' : '试用版'}}</view>
        <button bindtap="showPayDialog" style="background: {{isTrialExpired ? '#ff7d00' : (isFormalVersion ? '#1890ff' : '#ff7d00')}}; color: white; border: none; width: 80rpx; min-width: 80rpx; padding: 4rpx 0; border-radius: 8rpx; font-size: {{22 * fontSizeMultiple}}rpx; margin-left: 10rpx; line-height: 1.2; text-align: center;">
          {{isFormalVersion ? '续费' : '升级'}}
        </button>
        <view style="width: 16rpx; height: 16rpx; border-top: 2rpx solid #ccc; border-right: 2rpx solid #ccc; transform: rotate(45deg); margin-left: 10rpx;"></view>
      </view>
    </view>
  </view>

  <!-- 团长中心入口 ★修改为跳转到独立页面，删除原弹窗逻辑★ -->
  <view wx:if="{{(isFormalVersion && !isChildMode) || (parentPayInfo.isFormalVersion && isChildMode)}}" style="background: white; border-radius: 16rpx; box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.05); margin-bottom: 25rpx;">
    <view bindtap="goToGroupLeader" style="padding: 20rpx; display: flex; justify-content: space-between; align-items: center;">
      <view style="font-size: {{30 * fontSizeMultiple}}rpx; color: #333; display: flex; align-items: center;">
        <text style="color: #ff7d00; margin-right: 10rpx;">💰</text>团长中心
      </view>
      <view style="display: flex; align-items: center;">
        <view style="width: 16rpx; height: 16rpx; border-top: 2rpx solid #ff7d00; border-right: 2rpx solid #ff7d00; transform: rotate(45deg);"></view>
      </view>
    </view>
  </view>

  <view style="background: white; border-radius: 16rpx; box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.05); margin-bottom: 25rpx;">
    <view style="padding: 20rpx; display: flex; justify-content: space-between; align-items: center;">
      <view style="font-size: {{30 * fontSizeMultiple}}rpx; color: #333;">{{isChildMode ? '父母关怀模式' : '关怀模式'}}</view>
      <switch checked="{{careMode || false}}" bindchange="onCareModeSwitchChange" style="transform: scale(0.9);"></switch>
    </view>
    <view hidden="{{!careMode}}" style="padding: 15rpx 20rpx; border-top: 1px solid #f5f5f5;">
      <view style="font-size: {{26 * fontSizeMultiple}}rpx; color: #666; margin-bottom: 10rpx;">
        字体大小：{{Math.round((fontSizeMultiple || 1) * 100)}}%
      </view>
      <picker mode="selector" range="{{fontOptions}}" range-key="name" value="{{currentFontIndex || 0}}" bindchange="onFontChange" style="width: 100%;">
        <view style="border: 1px solid #1890ff; border-radius: 8rpx; padding: 15rpx; font-size: {{28 * fontSizeMultiple}}rpx; color: #1890ff; background: #f0f9ff;">
          {{fontOptions[currentFontIndex || 0].name || '1.1倍'}}（当前）
        </view>
      </picker>
    </view>
  </view>

  <view style="margin-bottom: 25rpx;">
    <view style="font-size: {{32 * fontSizeMultiple}}rpx; color: #333; margin-bottom: 10rpx;">
      {{isChildMode ? '父母未签到提醒' : '未签到提醒'}}
    </view>
    <view style="background: white; border-radius: 12rpx; padding: 15rpx; box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.05);">
      <view style="display: flex; justify-content: space-between; align-items: center;">
        <view style="font-size: {{28 * fontSizeMultiple}}rpx; color: #333;">连续2天未签到发送邮箱提醒</view>
        <switch checked="{{isChildMode ? parentPayInfo.enableRemind : userInfo.enableRemind}}" bindchange="onRemindSwitchChange" disabled="{{isTrialExpired && !isChildMode}}" style="transform: scale(1.1);"/>
      </view>
    </view>
  </view>

  <view style="background: white; border-radius: 16rpx; box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.05); margin-bottom: 25rpx;">
    <view bindtap="showAboutDialog" style="padding: 20rpx; border-bottom: 1px solid #f5f5f5; display: flex; justify-content: space-between; align-items: center;">
      <view style="font-size: {{30 * fontSizeMultiple}}rpx; color: #333;">关于我们</view>
      <view style="width: 16rpx; height: 16rpx; border-top: 2rpx solid #ccc; border-right: 2rpx solid #ccc; transform: rotate(45deg);"></view>
    </view>
    <button open-type="contact" session-from="咱爸咱妈平安签-联系客服入口" style="width: 100%; text-align: left; padding: 20rpx; margin: 0; border: none; background: transparent; display: flex; justify-content: space-between; align-items: center;">
      <view style="font-size: {{30 * fontSizeMultiple}}rpx; color: #333;">联系客服</view>
      <view style="width: 12rpx; height: 12rpx; border-top: 2rpx solid #c8c8cd; border-right: 2rpx solid #c8c8cd; transform: rotate(45deg);"></view>
    </button>
  </view>

  <!-- 支付弹窗 -->
  <view wx:if="{{showPayDialog}}" style="position: fixed; top: 0; left: 0; right: 0; bottom: 0; background: rgba(0,0,0,0.5); z-index: 999; display: flex; align-items: center; justify-content: center;">
    <view style="width: 80%; background: white; border-radius: 16rpx; padding: 30rpx; box-shadow: 0 6rpx 16rpx rgba(0,0,0,0.1);">
      <view style="font-size: {{34 * fontSizeMultiple}}rpx; font-weight: bold; text-align: center; margin-bottom: 30rpx; color: #333;">
        {{isParentPay ? '为父母升级/续费' : (isFormalVersion ? '续费会员' : '升级正式版')}}
      </view>
      <view style="font-size: {{26 * fontSizeMultiple}}rpx; color: #ff4d4f; font-weight: bold; text-align: center; margin-bottom: 20rpx; padding: 10rpx; background: #fff5f5; border-radius: 8rpx;">
        【重要提示】虚拟会员服务，一经付费即时生效，概不退款
      </view>
      <view style="font-size: {{26 * fontSizeMultiple}}rpx; color: #666; text-align: center; margin-bottom: 20rpx;">
        {{isParentPay ? '为绑定的父母账号开通正式版，解锁全部功能' : (isFormalVersion ? '选择续费时长' : '试用到期后，升级正式版即可继续使用全部功能')}}
      </view>
      <view style="display: flex; gap: 20rpx; margin-bottom: 30rpx;">
        <button bindtap="choosePayType" data-type="month" style="flex: 1; background: #f5f5f5; color: #333; padding: 15rpx 0; border-radius: 8rpx; font-size: {{28 * fontSizeMultiple}}rpx; border: none;">月付<br/>3元/月</button>
        <button bindtap="choosePayType" data-type="year" style="flex: 1; background: #ff7d00; color: white; padding: 15rpx 0; border-radius: 8rpx; font-size: {{28 * fontSizeMultiple}}rpx; border: none;">年付<br/>20元/年</button>
      </view>
      <button bindtap="closePayDialog" style="width: 100%; background: #f5f5f5; color: #333; padding: 15rpx 0; border-radius: 8rpx; font-size: {{28 * fontSizeMultiple}}rpx; border: none;">取消</button>
    </view>
  </view>

  <!-- 关于弹窗 -->
  <view wx:if="{{showAboutDialog}}" style="position: fixed; top: 0; left: 0; right: 0; bottom: 0; background: rgba(0,0,0,0.5); z-index: 999; display: flex; align-items: center; justify-content: center;">
    <view style="width: 80%; background: white; border-radius: 16rpx; padding: 30rpx; box-shadow: 0 6rpx 16rpx rgba(0,0,0,0.1);">
      <view style="font-size: {{34 * fontSizeMultiple}}rpx; font-weight: bold; text-align: center; margin-bottom: 20rpx; color: #333;">关于「咱爸咱妈平安签」</view>
      <view style="font-size: {{26 * fontSizeMultiple}}rpx; color: #666; line-height: 1.6; margin-bottom: 30rpx;">
        开发者：咱爸咱妈平安签团队<br/>
        功能：每日签到、紧急呼叫、位置共享、未签到提醒<br/>
        宗旨：守护独居老人的安全与健康
      </view>
      <button bindtap="closeAboutDialog" style="width: 100%; background: #1890ff; color: white; border: none; padding: 15rpx 0; border-radius: 12rpx; font-size: {{28 * fontSizeMultiple}}rpx;">关闭</button>
    </view>
  </view>

  <!-- 模式切换弹窗 -->
  <view wx:if="{{showModeSwitchSheet}}" style="position: fixed; top: 0; left: 0; right: 0; bottom: 0; background: rgba(0,0,0,0.5); z-index: 999; display: flex; align-items: center; justify-content: center;">
    <view style="width: 80%; background: white; border-radius: 16rpx; padding: 30rpx; box-shadow: 0 6rpx 16rpx rgba(0,0,0,0.1);">
      <view style="font-size: {{34 * fontSizeMultiple}}rpx; font-weight: bold; text-align: center; margin-bottom: 20rpx; color: #333;">
        {{isChildMode ? '切换为父母模式' : '切换为子女模式'}}
      </view>
      <view wx:if="{{!isChildMode}}" style="margin-bottom: 30rpx;">
        <view style="font-size: {{26 * fontSizeMultiple}}rpx; color: #666; margin-bottom: 10rpx;">请输入父母6位绑定码：</view>
        <input model:value="{{bindCode}}" type="digit" maxlength="6" placeholder="请输入6位绑定码" style="border:1px solid #eee; border-radius:8rpx; padding:20rpx; font-size:{{30*fontSizeMultiple}}rpx;" />
      </view>
      <view style="display:flex; justify-content:space-between; gap:20rpx;">
        <button bindtap="cancelModeSwitch" style="flex:1; background:#f5f5f5; border:none; border-radius:8rpx; font-size:{{28*fontSizeMultiple}}rpx;">取消</button>
        <button bindtap="confirmModeSwitch" style="flex:1; background:#1890ff; color:white; border:none; border-radius:8rpx; font-size:{{28*fontSizeMultiple}}rpx;">确认切换</button>
      </view>
    </view>
  </view>

  <!-- 管理员入口 -->
  <view wx:if="{{isAdmin}}" style="margin-bottom: 80rpx;">
  <view style="background: white; border-radius: 16rpx; box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.05);">
    <view bindtap="navigateToAdmin" style="padding: 20rpx; display: flex; justify-content: space-between; align-items: center; border-top: 1px solid #f5f5f5;">
      <view style="font-size: {{30 * fontSizeMultiple}}rpx; color: #ff7d00; font-weight: 500;">后台设置（管理员专属）</view>
      <view style="width: 16rpx; height: 16rpx; border-top: 2rpx solid #ff7d00; border-right: 2rpx solid #ff7d00; transform: rotate(45deg);"></view>
    </view>
  </view>
</view>
</view>