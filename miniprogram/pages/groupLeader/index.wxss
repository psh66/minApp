.container {
  background: #f5f5f5;
  min-height: 100vh;
  padding: 20rpx;
}

.header-card {
  background: linear-gradient(135deg, #1890ff, #096dd9);
  color: white;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
}

.header-title {
  font-size: 32rpx;
  font-weight: 500;
  margin-bottom: 20rpx;
}

.stats-row {
  display: flex;
  justify-content: space-between;
}

.stat-item {
  text-align: center;
  flex: 1;
}

.stat-label {
  font-size: 24rpx;
  opacity: 0.9;
  margin-bottom: 8rpx;
}

.stat-value {
  font-size: 28rpx;
  font-weight: 500;
}

.highlight {
  color: #ffd700;
}

.action-card {
  background: white;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  display: flex;
  flex-direction: column;
  gap: 15rpx;
}

.action-btn {
  border-radius: 12rpx;
  font-size: 28rpx;
  padding: 18rpx 0;
  border: none;
}

.action-btn.blue {
  background: #1890ff;
  color: white;
}

.action-btn.orange {
  background: #ff7d00;
  color: white;
}

.action-btn.green {
  background: #07c160;
  color: white;
}

.action-btn[disabled] {
  background: #e5e5e5;
  color: #999;
}

.order-card,
.withdraw-card {
  background: white;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
}

.card-title {
  font-size: 30rpx;
  font-weight: 500;
  margin-bottom: 20rpx;
  color: #333;
}

.empty-state {
  text-align: center;
  padding: 60rpx 0;
}

.empty-icon {
  font-size: 60rpx;
  margin-bottom: 10rpx;
}

.empty-text {
  font-size: 26rpx;
  color: #999;
}

.order-item,
.withdraw-item {
  padding: 20rpx 0;
  border-bottom: 1rpx solid #f5f5f5;
}

.order-item:last-child,
.withdraw-item:last-child {
  border-bottom: none;
}

.order-info,
.withdraw-info {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 8rpx;
}

.order-no {
  font-size: 26rpx;
  color: #333;
}

.order-amount {
  font-size: 28rpx;
  font-weight: 500;
  color: #ff7d00;
}

.order-time,
.withdraw-time {
  font-size: 24rpx;
  color: #999;
}

.withdraw-amount {
  font-size: 28rpx;
  font-weight: 500;
  color: #333;
}

.withdraw-status {
  font-size: 24rpx;
  padding: 4rpx 12rpx;
  border-radius: 16rpx;
  color: white;
}

.withdraw-status.pending {
  background: #ff7d00;
}

.withdraw-status.success {
  background: #07c160;
}

.withdraw-status.fail {
  background: #ff4d4f;
}

/* 弹窗样式 */
.modal {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.5);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1000;
}

.modal-content {
  background: white;
  border-radius: 16rpx;
  width: 80%;
  max-width: 600rpx;
  padding: 30rpx;
}

.modal-title {
  font-size: 32rpx;
  font-weight: 500;
  text-align: center;
  margin-bottom: 30rpx;
  color: #333;
}

.form-group {
  margin-bottom: 20rpx;
}

.form-label {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 10rpx;
}

.form-input {
  border: 1rpx solid #e5e5e5;
  border-radius: 8rpx;
  padding: 15rpx;
  font-size: 26rpx;
}

.modal-actions {
  display: flex;
  gap: 20rpx;
  margin-top: 30rpx;
}

.modal-btn {
  flex: 1;
  border-radius: 8rpx;
  padding: 15rpx 0;
  font-size: 28rpx;
  border: none;
}

.modal-btn.cancel {
  background: #f5f5f5;
  color: #333;
}

.modal-btn.confirm {
  background: #1890ff;
  color: white;
}
